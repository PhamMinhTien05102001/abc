<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.InfoBookFragment"
    android:stretchColumns="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="500dp">
            <ImageView
                android:id="@+id/iv_info_avatar_book"
                android:layout_width="match_parent"
                android:layout_height="485dp"
                android:src="@drawable/slide_1">
            </ImageView>

            <RatingBar
                android:id="@+id/rb_info_star_book"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:numStars="5"
                android:rating="3"
                android:stepSize="0.5">
            </RatingBar>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_info_name"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/black"
            android:textSize="15dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_info_bookID"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_marginTop="10dp"
                android:text="|"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_info_available"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_marginTop="10dp"
                android:text="|"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_info_page"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_info_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textColor="@color/black">
        </TextView>

        <TextView
            android:id="@+id/tv_info_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textColor="@color/black">
        </TextView>

        <TextView
            android:id="@+id/tv_info_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textColor="@color/black">
        </TextView>
    </LinearLayout>


</ScrollView>